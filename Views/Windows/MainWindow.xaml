<Window x:Class="RequestManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:RequestManager.ViewModels"
        xmlns:cmd="clr-namespace:RequestManager.Infrastructure.Commands"
        xmlns:local="clr-namespace:RequestManager"
        mc:Ignorable="d"
        Title="Менеджер запросов" Height="450" Width="800">
    <Window.Resources>
        <!--Стили кнопок-->
        <Style  TargetType="Button">
            <Setter Property="FontFamily" Value="Arial" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Height" Value="30" />
            <Setter Property="Margin" Value="5" />
        </Style>
        <!--Стили лэйбэлов-->
        <Style  TargetType="Label">
            <Setter Property="FontFamily" Value="Arial" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="Light" />
        </Style>
        <!--Стили комбобоксов-->
        <Style  TargetType="ComboBox">
            <Setter Property="FontFamily" Value="Arial" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Width" Value="100"/>
        </Style>

        <!-- DataGridColumnHeader style -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Height" Value="30"/>
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Margin" Value="2" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="ToolTip" Value="Click to sort."/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="DataGrid">
            <Setter Property="ColumnWidth" Value="*"/>
        </Style>
    </Window.Resources>
    
    <Window.DataContext>
        <vm:RequestViewModel/>
    </Window.DataContext>

    <DockPanel>
        <TabControl DockPanel.Dock="Top" Margin="1">
            
            <TabItem Header="Запросы">
                <Page x:Name="MWPage1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="70"></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition Height="40"></RowDefinition>
                        </Grid.RowDefinitions>
                        <!--Панель с фильтрами-->
                        <StackPanel Orientation="Horizontal" Grid.Row="0">
                            <Label>Фильтры:</Label>
                            <StackPanel Orientation="Vertical" >
                                <Label >Год:</Label>
                                <ComboBox x:Name="YearsBox"  VerticalAlignment="Top" ItemsSource="{Binding Path=Years}"></ComboBox>
                            </StackPanel>
                            <StackPanel Orientation="Vertical" >
                                <Label >Месяц:</Label>
                                <ComboBox x:Name="MonthsBox"  VerticalAlignment="Top" ItemsSource="{Binding Path=MonthsList}" ></ComboBox>
                            </StackPanel>
                            <StackPanel Orientation="Vertical" >
                                <Label >Отправитель:</Label>
                                <ComboBox  VerticalAlignment="Top"></ComboBox>
                            </StackPanel>

                            <Button Margin="5" VerticalAlignment="Top" Command="{Binding ShowMessageCommand}">Hello World</Button>
                            <Button Margin="5" VerticalAlignment="Top">Close Application
                                <Button.Command>
                                    <cmd:CloseAppCommand/>
                                </Button.Command>
                            </Button>
                        </StackPanel>
                        <!--Таблица с данными-->
                        <ScrollViewer Grid.Row="1">
                            <DataGrid Margin="5,10,5,5" AutoGenerateColumns="False" ColumnWidth="*" >
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Id" ></DataGridTextColumn>
                                    <DataGridTextColumn Header="Дата создания"/>
                                    <DataGridTextColumn Header="Дата обновления"/>
                                    <DataGridTextColumn Header="Отправитель"/>
                                    <DataGridTextColumn Header="Менеджер"/>
                                    <DataGridTextColumn Header="Исполнитель"/>
                                </DataGrid.Columns>
                                <DataGrid.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="Новый расчёт"></MenuItem>
                                        <MenuItem Header="Перейти"></MenuItem>
                                        <MenuItem Header="Копировать"></MenuItem>
                                        <MenuItem Header="Вставить"></MenuItem>
                                        <MenuItem Header="Удалить"></MenuItem>
                                    </ContextMenu>


                                </DataGrid.ContextMenu>
                            </DataGrid>
                        </ScrollViewer>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right"  Grid.Row="2">
                            <Button  Width="100"  >Обновить</Button>
                            <Button  Width="100" >Закрыть
                                <Button.Command>
                                    <cmd:CloseAppCommand/>
                                </Button.Command>
                            </Button>
                        </StackPanel>

                    </Grid>

                </Page>
                
            </TabItem>
            <TabItem Header="Установки"></TabItem>
        </TabControl>
    </DockPanel>    


</Window>
